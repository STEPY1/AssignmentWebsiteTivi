{% extends 'base.html.twig' %}
{% block body %}
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">

        <style>
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                text-decoration: none;
                list-style: none;
                scroll-behavior: smooth;
                font-family: 'Lato', sans-serif;
            }

            /* Navbar Start */
            #navbar{
                background: #f9f9f9;
            }
            #logo{
                font-size: 36px;
                font-weight: 550px;
                color: black;
                text-shadow: 0px 1px 1px black;
                margin-bottom: 5px;
            }
            #logo span{
                color: #ffa500;
            }
            .navbar-toggler span{
                color: #ffa500;
            }
            .navbar-nav{
                margin-left: 20px;
            }
            .nav-item .nav-link{
                font-size: 16px;
                font-weight: 550;
                color: black;
                letter-spacing: 1px;
                border-radius: 3px;
                transition: 0.5s ease;
            }
            .nav-item .nav-link:hover{
                background: #ffa500;
                color: white;
            }
            #navbar form button{
                background: orange;
                color: white;
                border: none;
            }
            /* Navbar End */

            /* Home Section Start */
            .home{
                width: 100%;
                height: 90vh;
                background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.2)), url(Image/background\ img.png);
                background-repeat: no-repeat;
                background-size: cover;
            }
            .home .content{
                text-align: center;
                padding-top: 200px;
            }
            .home .content h5{
                color: white;
                font-size: 38px;
                font-weight: 550px;
                text-shadow: 0px 1px 1px black;
            }
            .home .content h1{
                color: white;
                font-size: 70px;
                font-weight: 550;
                text-shadow: 0px 1px 1px black;
                margin-top: 5px;
            }
            .changecontent::after{
                content: ' ';
                color: #ffa500;
                text-shadow: 0px 1px 1px black;
                animation: changetext 10s infinite linear;
            }
            @keyframes changetext{
                0%{content: "France";}
                10%{content: "Spain";}
                20%{content: "United States";}
                30%{content: "China";}
                40%{content: "India";}
                50%{content: "Pakistan";}
                60%{content: "Italy";}
                70%{content: "Turkey";}
                80%{content: "Mexico";}
                90%{content: "Germany";}
                100%{content: "United kingdom";}
            }
            .home .content p{
                color: white;
                font-size: 15px;
                font-weight: 600;
                text-shadow: 0px 1px 1px black;
                margin-bottom: 30px;
                margin-top: 5px;
            }
            .home .content a{
                padding: 10px;
                background: white;
                color: black;
                letter-spacing: 2px;
                font-weight: 550;
                border-radius: 5px;
                text-decoration: none;
                transition: 0.5s;
            }
            .home .content a:hover{
                background: #ffa500;
                color: white;
            }
            @media (max-width:850px){
                .home{
                    background-position: 50%;
                }
            }
            @media (max-width:450px){
                .home .content h5{
                    font-size: 25px;
                }
                .home .content h1{
                    font-size: 38px;
                }
                .home .content p{
                    font-size: 13px;
                }
            }
            /* Home Section End */

            /* Section Book Start */
            .book{
                background: #f9f9f9;
                padding: 50px;
            }
            .main-text h1{
                text-align: center;
                text-shadow: 0px 1px 1px black;
                font-weight: 600;
            }
            .main-text h1 span{
                color: #ffa500;
            }
            .book .card{
                border-radius: 10px;
                box-shadow: 0px 5px 5px -6px black;
            }
            .book .row{
                margin-top: 30px;
            }
            .book form input{
                padding: 10px;
                color: black;
                border: none;
                outline: none;
                font-size: 15px;
                border-radius: 10px;
                box-shadow: 0px 5px 5px -6px black;
            }
            .book form textarea{
                border: none;
                border-radius: 10px;
                resize: none;
                box-shadow: 0px 5px 5px -6px black;
                height: 200px;
            }
            .book .submit{
                width: 160px;
                font-size: 16px;
                font-weight: 550;
                background: #ffa500;
                color: white;
                margin-top: 10px;
                transition: 0.5s;
            }
            .book .submit:hover{
                width: 170px;
            }
            @media (max-width:765px){
                .book{
                    padding: 0;
                }
                .main-text h1{
                    padding: 20px;
                }
            }
            /* Section Book End */





            /* Section Packages Start */

            /* Style for the main packages section */
            .packages {

                background-color: #f7f7f7;
            }

            /* Style for the main heading */
            .main-txt h1 {
                font-size: 36px;
                font-weight: bold;
                text-transform: uppercase;
                text-align: center;
                margin-bottom: 20px;
            }

            /* Style for the main heading span */
            .main-txt h1 span {
                color: #f39c12;
            }

            /* Style for the button to toggle the navbar collapse */
            .navbar-toggler {
                border: none;
                background-color: transparent;
                color: #000;
                font-size: 18px;
                cursor: pointer;
            }

            .navbar-toggler span {
                margin-right: 5px;
            }

            /* Style for the hint list in the collapsed navbar */
            .main-hint {
                margin-top: 10px;
                padding: 0;
                list-style: none;
                display: flex;
                justify-content: space-around;
            }

            .main-hint li {
                margin-bottom: 10px;
            }

            .main-hint a.btn {
                text-transform: uppercase;
                font-weight: bold;
                color: #000;
                text-decoration: none;
                background-color: #f39c12;
                padding: 10px 20px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

            .main-hint a.btn:hover {
                background-color: #e67e22;
            }

            /* Style for the product cards in the row */
            .row .col-md-4 {
                position: relative;
                transition: transform 0.3s;
            }

            .row .col-md-4:hover {
                transform: scale(1.05);
            }

            .card {
                border: 1px solid #ddd;
                border-radius: 5px;
                overflow: hidden;
            }

            .card img {
                width: 100%;
                height: auto;
                display: block;
            }

            .card-body {
                padding: 15px;
            }
            .card-body a {
                display: inline-block;
                background-color: #FFA500; /* Màu cam đậm */
                color: #fff;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                margin-top: 10px;
                transition: background-color 0.3s;
            }

            .card-body a:hover {
                background-color: #FF8C00; /* Màu cam nhạt */
            }
            .packages .card-body {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                padding: 15px;
                background-color: rgba(255, 255, 255, 0.9);
                transform: translateY(100%);
                transition: transform 0.3s;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                text-align: center;
                height: 100%;
            }

            .packages .card-body h3,
            .packages .card-body .star,
            .packages .card-body h6,
            .packages .card-body a {
                margin-bottom: 10px;
            }

            .packages .card:hover .card-body {
                transform: translateY(0);
            }
            .product-card {
                margin-bottom: 20px;
                position: relative;
            }

            .product-card .card-body {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                padding: 10px;
                background-color: rgba(255, 255, 255, 0.9);
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
                border-radius: 5px;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .product-card:hover .card-body {
                opacity: 1;
            }

            .notification {
                text-align: center;
                font-size: 16px;
                font-weight: bold;
                color: #555;
                padding: 8px;
                background-color: #ffc107;
                border-radius: 5px;
                position: absolute;
                top: 10px;
                left: 10px;
                z-index: 1;
                opacity: 0.8;
                display: none;
            }

            .product-card:hover .notification {
                display: block;
            }

            /* Thêm hiệu ứng làm mờ hình ảnh khi hover */
            .product-card:hover img {
                opacity: 0.2;
            }
            /* Thêm hiệu ứng hover cho phần "Thông tin sản phẩm" */
            .product-info a {
                color: #000;
                text-decoration: none;
                display: inline-block;
                position: relative;
            }

            .product-info a:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 2px;
                background-color: #ffc107; /* Màu sắc hiệu ứng */
                transform: scaleX(0); /* Thanh hiệu ứng mặc định bị thu gọn */
                transform-origin: left;
                transition: transform 0.3s ease;
            }

            .product-info a:hover:after {
                transform: scaleX(1); /* Thanh hiệu ứng được mở rộng khi hover vào liên kết */
            }
            /* Định dạng màu sắc cho hình ngôi sao và chữ hiển thị đánh giá */
            .star {
                color: #FFA500; /* Màu cam đậm */
                display: flex;
                align-items: center;
            }

            .star i {
                font-size: 24px;
                margin-right: 3px;
            }

            .star .checked {
                color: #FFA500; /* Màu cam đậm */
            }

            /* Style for the "Xem tất cả sản phẩm" button */
            .main-txt-1 h1 {
                text-align: center;
                margin-top: 30px;
            }

            .main-txt-1 a.btn {
                text-transform: uppercase;

                color: #000;
                text-decoration: none;
                border: 2px solid #f39c12;
                padding: 10px 30px;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }

            .main-txt-1 a.btn:hover {
                background-color: #f39c12;
                color: #fff;
            }

            /* Section Packages End */




            /* Section Services Start */
            .services{
                background: #f9f9f9;

            }
            .services .card{
                box-shadow: rgba(0,0,0,0.1) 0px 4px 12px;
                border: none;
                cursor: pointer;
            }
            .services .card i{
                font-size: 80px;
                text-align: center;
                color: #ffa500;
                margin-top: 20px;
            }
            .services .card .card-body h3{
                font-weight: 600;
            }
            .services .card .card-body{
                text-align: center;
            }
            /* Section Services End */


            /* CSS riêng cho phần "Thông tin liên hệ" */
            #contact {
                background-color: #f9f9f9;
            }

            #contact .main-txt h1 {
                font-size: 36px;
                font-weight: bold;
                text-transform: uppercase;
                text-align: center;
                margin-bottom: 20px;
            }

            #contact .main-txt h1 span {
                color: #f39c12;
            }

            #contact .row {
                margin-top: 50px;
            }

            #contact .contact-info h2 {
                font-size: 28px;
                font-weight: bold;
                text-align: center;
                margin-bottom: 15px;
            }

            #contact .contact-info p {
                font-size: 16px;
                font-weight: 500;
                text-align: center;
                margin-bottom: 30px;
            }

            #contact .contact-btn {
                text-align: center;
            }

            #contact .btn {
                text-transform: uppercase;
                font-weight: bold;
                color: #fff;
                background-color: #f39c12;
                padding: 12px 25px;
                border-radius: 5px;
                text-decoration: none;
                transition: background-color 0.3s;
            }

            #contact .btn:hover {
                background-color: #e67e22;
            }

            #contact .contact-image img {
                border-radius: 10px;
                width: 100%;
            }

            /* CSS cho phần Footer */
            .site-footer {
                background-color: #f9f9f9;
                text-align: center;
                padding: 30px 0;
            }

            .site-footer h1 {
                font-weight: 600;
                font-size: 36px;
                color: #000;
                margin-bottom: 20px;
            }

            .site-footer h1 span {
                color: #ffa500;
            }

            .site-footer p {
                font-weight: 500;
                font-size: 16px;
                color: #000;
                margin-bottom: 20px;
            }

            .social-links {
                display: flex;
                justify-content: center;
                align-items: center;
                margin-top: 20px;
            }

            .social-links a {
                text-decoration: none;
                color: #000;
                margin-right: 15px;
                font-size: 24px;
            }

            /* Hiệu ứng hover cho các biểu tượng mạng xã hội */
            .social-links a:hover {
                color: #ffa500;
            }


            .site-footer {

                color: black;
                padding: 30px 0;
            }

        </style>
    </head>
    <body>

    <!-- Section Packages Start -->
    <section class="packages" id="packages">
        <div class="container">
            <div class="main-txt">
                <h1 href="{{ path('app_home') }}" role="button"><span>TV </span>OLED</h1>
            </div>
            <div class="main-hint col-md-12 d-flex justify-content-center"> <!-- Thêm class "d-flex justify-content-center" để căn giữa -->
                <li class="col"><a class="btn" href="http://127.0.0.1:8000/samsung"><strong>OLED</strong></a></li>
                <li class="col"><a class="btn" href="http://127.0.0.1:8000/sonic"><strong>QLED</strong></a></li>
                <li class="col"><a class="btn" href="http://127.0.0.1:8000/neo_qled8k"><strong>Neo QLED 8K</strong></a></li>
                <li class="col"><a class="btn" href="http://127.0.0.1:8000/neoqled4k"><strong>Neo QLED 4K</strong></a></li>
                <li class="col"><a class="btn" href="http://127.0.0.1:8000/cry"><strong>Crystal UHD</strong></a></li>
            </div>

            <div class="row" style="margin-top: 30px;">
                {% for product in products %}
                    <div class="col-md-4 py-5 py-md-2 product-card">
                        <div class="card">
                            <img src="{{ asset('image/' ~ product.getImage()) }}" alt="{{ product.getName() }}">
                            <div class="notification">HOT</div>
                            <div class="card-body">
                                <h3>{{ product.getName() }}</h3>
                                <div class="star">
                                    <i class="fa-solid fa-star checked"></i>
                                    <i class="fa-solid fa-star checked"></i>
                                    <i class="fa-solid fa-star checked"></i>
                                    <i class="fa-solid fa-star checked "></i>
                                    <i class="fa-solid fa-star "></i>
                                </div>
                                <h6>Giá: <strong>{{ product.getPrice() }} vnđ</strong></h6>
                                <a href="{{ path('app_detail_show', {'id': product.id}) }}"><strong>Thông tin sản phẩm</strong></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Section Packages End -->





    {#    <!-- About Start -->#}
    <section  id="contact">
        <div class="container">
            <div class="main-txt py-4">
                <h1><span>Thông tin</span> liên hệ</h1>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-info">
                        <h2><span>Thông tin</span> liên hệ</h2>
                        <p>Nếu có thắc mắc, vui lòng để lại thông tin liên hệ:</p>
                        <div class="contact-btn">
                            <a href="{{ path('app_contact_new') }}" class="btn">Liên hệ ngay</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact-image">
                        <img src="Image/contact-us.jpg" alt="Contact Image">
                    </div>
                </div>
            </div>
        </div>
    </section>
    {#    <!-- About End -->#}

    <!-- Footer Start -->
    <footer class="site-footer">
        <div class="container">
            <div class="footer">
                <h1><span>♈Ru</span>by</h1>
            </div>
            <p>Thông tin liên hệ</p>
            <div class="social-links">
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="https://www.facebook.com/profile.php?id=100092994345599"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="https://www.youtube.com/watch?v=stHyBrM-dtg"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-pinterest-p"></i></a>
            </div>
        </div>
    </footer>
    <!-- Footer End -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    </body>
{% endblock %}






