{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>

        h1{
            text-align: center;
            margin-top: 30px;
            font-weight: 600;
            text-shadow: 0px 1px 1px black;
        }
        body{
            text-align: center;

        }
        h1 span{
            color: #ffa500;
        }
    </style>

<body>
    <h1 class="h3 mb-3 font-weight-normal py-md-2">Đăng kí<span> tài khoản</span></h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}


        {{ form_row(registrationForm.email, {
            label: ' Tên đăng kí :'
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mật khẩu :'
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}

    <button  type="submit" class="btn btn-light py-md-2"> Đăng kí</button>
    {{ form_end(registrationForm) }}
    </body>


{% endblock %}
