{{ form_start(form) }}
<style>

    /* About Start */
    .about{
        padding: 50px;
        margin-top: 50px;
        background: #f9f9f9;

    }
    .about span{
        color: #ffa500;
    }

    .about .card{
        border-radius: 10px;


    }
    .about .card img{
        border-radius: 10px;
    }
    .about h2{
        font-weight: 600px;
        letter-spacing: 1px;
    }
    .about p{
        font-weight: 500;
    }
    #about-btn{

        width: 170px;
        height: 38px;
        border: none;
        border-radius: 5px;
        background: #ffa500;
        color: white;
        letter-spacing: 2px;
        font-weight: 550px;
        transition: 0.5s ease;
        cursor: pointer;
    }
    #about-btn a{
        font-size: 16px;
        font-weight: 550;
        color: black;
        letter-spacing: 1px;
        border-radius: 3px;
        transition: 0.5s ease;
    }

    #about-btn:hover{
        width: 190px;
        background: #ffa500;
        color: white;
    }
    #about-btn:hover a{

        background: #ffa500;
        color: white;
    }
    @media (max-width:765px){
        .about{
            padding: 0;
        }
    }
    /* About End */

</style>
<section class="about" id="about">
    <div class="container">
        <div class="row" style="margin: 50px">
                <div class="col-md-6 py-9 py-md-0">
                    <div class="card">
                        <img src="../Image/pakistan.png" alt="">
                    </div>
                </div>


                <div class="col-md-6 py-9 py-md-0">
                    <h2 style="text-align: center"><strong><span>Thông tin</span> liên hệ</strong></h2>
                {#                        <p>5 điều phải biết khi mua TV ...</p>#}
                        <div class="col-md-8">
                            <h3>{{ form_row(form.Name, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                        <div class="col-md-8">
                            <h3>{{ form_row(form.Email, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                    <div class="row">
                        <div class="col-md-10">
                            <h3>{{ form_row(form.Phonenumber, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                        <div class="col-md-10">
                            <h3>{{ form_row(form.Address, { 'attr': {'class':'col-md-10'} }) }}</h3>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary" id="about-btn ">{{ button_label|default('Lưu') }}</button>
                </div>
    </div>
    </div>
</section>
{{ form_end(form) }}
