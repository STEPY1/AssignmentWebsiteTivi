{{ form_start(form) }}
<style>

    /* About Start */
    .about{
        padding: 50px;
        margin-top: 50px;
        background: #f9f9f9;

    }
    .about span{
        color: #ffa500;
    }

    .about .card{
        border-radius: 10px;


    }
    .about .card img{
        border-radius: 10px;
    }
    .about h2{
        font-weight: 600px;
        letter-spacing: 1px;
    }
    .about p{
        font-weight: 500;
    }
    #about-btn{

        width: 170px;
        height: 38px;
        border: none;
        border-radius: 5px;
        background: #ffa500;
        color: white;
        letter-spacing: 2px;
        font-weight: 550px;
        transition: 0.5s ease;
        cursor: pointer;
    }
    #about-btn a{
        font-size: 16px;
        font-weight: 550;
        color: black;
        letter-spacing: 1px;
        border-radius: 3px;
        transition: 0.5s ease;
    }

    #about-btn:hover{
        width: 190px;
        background: #ffa500;
        color: white;
    }
    #about-btn:hover a{

        background: #ffa500;
        color: white;
    }
    @media (max-width:765px){
        .about{
            padding: 0;
        }
    }
    /* About End */

</style>
<section class="about" id="about">
    <div class="container">
        <h2 style="text-align: center"><strong><span>Thông tin</span> liên hệ</strong></h2>
        <div class="row" style="margin: 50px">
                <div class="col-md-6 py-9 py-md-0">
                    <div class="card">

                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.6905028973815!2d106.6550054749938!3d10.758318889389376!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ef20e8a25b9%3A0xa276c55db8e15e7f!2zMTcgSG_DoG5nIMSQ4bupYyBUxrDGoW5nLCBQaMaw4budbmcgNCwgUXXhuq1uIDExLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1690427055806!5m2!1svi!2s" width="510" height="350" style="border:0; border-radius: 5px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                    </div>
                </div>

                <div class="col-md-6 py-9 py-md-0">
                        <div class="col-md-8">
                            <h3>{{ form_row(form.Name, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                        <div class="col-md-8">
                            <h3>{{ form_row(form.Email, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                    <div class="row">
                        <div class="col-md-10">
                            <h3>{{ form_row(form.Phonenumber, { 'attr': {'class': 'col-md-10'} }) }}</h3>
                        </div>
                        <div class="col-md-10">
                            <h3>{{ form_row(form.Address, { 'attr': {'class':'col-md-10'} }) }}</h3>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning" id="about-btn ">{{ button_label|default('Lưu') }}</button>
                </div>
    </div>
    </div>
</section>
{{ form_end(form) }}
